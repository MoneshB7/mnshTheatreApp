                    <th>
                        Book Tickets
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.indexList.Count; i++)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content(@Model.indexList[i].PosterURL.ToString())" alt="@Model.indexList[i].Name" style="height:250px;width:200px;" />
                        </td>
                        <td>
                            @Model.indexList[i].MovieName
                        </td>
                        <td>
                            @Model.indexList[i].Description
                        </td>
                        <td>
                            @Model.indexList[i].AverageRating
                        </td>
                        <td>
                            @Model.indexList[i].Language
                        </td>
                        <td>
                            <a asp-action="BookMovie" asp-route-id="@Model.indexList[i].MovieId">Book</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

